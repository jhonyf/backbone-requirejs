.footer {
  padding: 50px 0;
  margin-top: 70px;
  border-top: 1px solid #e5e5e5;
  background-color: #0e77bd;
  color: #bae3ff;
}

.footer a {
  color: #bae3ff;
  font-size: 12px;
  font-weight: normal;;
}

.footer-links li:first-child {
  padding-left: 0;
}

.footer-links li {
  display: inline;
  padding: 0 2px;
}

.footer .footerSearch {
  width: 550px;
}

.footer .footerSearch img {
  float: left;
}

.footer .footerSearch input {
  border-radius: 6px 6px 6px 6px;
  border: none;
  float: left;
  font-size: 16px;
  height: 28px;
  margin: 2px 30px;
  padding: 5px 5px 5px 5px;
  -ms-box-shadow: inset 0px 1px 2px #666;
  -moz-box-shadow: inset 0px 1px 2px #666;
  -webkit-box-shadow: inset 0px 1px 2px #666;
  box-shadow: inset 0px 1px 2px #666;
}

.footer .footerSearch button {
  float: left;
  margin: 0px;
  padding: 5px 15px;

}

.footer .footerLinks {
  margin-top: 50px;
}


.product-list {
  margin-left: 20.8333%;
}

.product {
  position: relative;
  overflow: hidden;
  float: left;
  width: 29.9145%;
  padding: 24px;
  margin: 0 1.709% 36px;

  border: 1px solid #ddd;
  border-radius: 4px;

  text-align: center;
}

.product-title {
  margin-bottom: 0;

  font-size: 16px;
  font-weight: normal;
  line-height: 1.5;
}

.product-image {
  margin-bottom: 36px;
}

.product-details {
  position: absolute;
  top: 36px;
  right: -45px;
  height: 120px;
  width: 60px;
  padding-left: 24px;

  border: 1px solid #ccc;

  background: #eee;

  list-style: none;

  transition: 0.3s ease-out right;

  &:hover {
    right: -1px;
  }
}

.price {
  position: relative;
  margin-bottom: 0;

  font-size: 36px;
}

.decimal {
  position: relative;
  top: -12px;
  margin-left: 2px;

  font-size: 18px;
}

.colors {
  margin: -20px 0 20px;

  list-style: none;

  li {
    display: inline-block;
    margin: 0 4px;
  }

  a {
    display: block;
    height: 18px;
    width: 18px;

    border-radius: 50%;

    text-indent: -999em;
  }
}

.rollback {
  position: absolute;
  top: 0;
  left: 0;
  padding: 2px 10px;

  border-radius: 0 0 4px 0;

  background: #DB2A19;

  color: #fff;
  text-shadow: 1px 1px 0 rgba(0,0,0,0.4);
}

.star {
  display: inline-block;
  width: 16px;
  height: 16px;
  margin-right: 2px;

  border: 1px solid #FFBD47;
  border-radius: 50%;

  background: #FFF6C7;

  vertical-align: middle;

  &.rated {
    background: #FFD247;
  }
}